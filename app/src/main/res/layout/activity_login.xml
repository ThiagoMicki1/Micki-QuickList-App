<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp" android:orientation="vertical"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/emailInput" android:hint="Email"
        android:inputType="textEmailAddress" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/passwordInput" android:hint="Password"
        android:inputType="textPassword" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="12dp"/>

    <Button android:id="@+id/loginBtn" android:text="Log in"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <Button android:id="@+id/signupBtn" android:text="Sign up"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>