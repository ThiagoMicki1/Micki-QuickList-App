<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox android:id="@+id/checkBox" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/itemText" android:textSize="16sp"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:paddingStart="8dp"/>

    <Button android:id="@+id/deleteBtn" android:text="Delete"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>